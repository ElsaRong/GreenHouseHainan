<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:padding="20dip"
              android:background="@color/workspace_background_color"
              >
	<Button android:id="@+id/cameraget_btn" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:text="拍照"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_marginTop="15dip"
	    
	    />
	<Button android:id="@+id/albumget_btn" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:text="从手机相册选择"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_marginTop="15dip"
	    />
	<Button android:id="@+id/report" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:text="拍照"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_marginTop="15dip"
	    android:visibility="gone"
	    />
	<Button android:id="@+id/info_btn" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_marginTop="15dip"
	    android:textColor="#ffffff"
	    android:visibility="gone"
	    />
	<Button android:id="@+id/btn_cc" 
	    android:layout_width="fill_parent"
	    android:layout_height="50dip"
	    android:text="取消"
	    android:textSize="20sp"
	    android:gravity="center"
	    android:layout_marginTop="15dip"
	    android:visibility="gone"
	    />
</LinearLayout>