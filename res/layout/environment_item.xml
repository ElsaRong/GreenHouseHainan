<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="20dp"
    android:background="@color/workspace_background_color"
    android:orientation="horizontal" >
    
    <TextView
        android:id="@+id/sensorid"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/workspace_icon_text_color"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/online"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/workspace_icon_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/airtemp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/workspace_icon_text_color"
        android:textSize="12sp" />
    
    <TextView
        android:id="@+id/airhum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:gravity="center"
        android:textColor="@color/workspace_icon_text_color"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/co2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/soiltemp"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/soilhum"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp" />
    
     <TextView
        android:id="@+id/ph"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="12sp" />

     <TextView
         android:id="@+id/illum"
         android:layout_width="0dp"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:textSize="12sp" />

</LinearLayout> 
