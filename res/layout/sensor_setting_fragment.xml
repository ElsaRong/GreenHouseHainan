<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sensor_setting_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/workspace_background_color"
    android:orientation="vertical" >

    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/show_current_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="当前值显示："
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/current_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/value_record"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="历史值显示"
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="14.0sp" />

        <ImageView
            android:id="@+id/day_night"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/sun_25px" />
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp"
    	android:orientation="horizontal" >

        <TextView
            android:id="@+id/show_night_threshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="夜间门限值(单位)"
            android:textColor="@color/workspace_icon_text_color"
            android:textSize="14.0sp" />
    
		    <EditText
		        android:id="@+id/night_threshold"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:background="@drawable/edittext_shape"
		        android:ems="10"
		        android:inputType="numberDecimal"
		        android:digits="1234567890" />

		    <TextView
		        android:id="@+id/night_threshold_record"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1.5"
		        android:textColor="@color/workspace_icon_text_color"
		        android:textSize="14.0sp" />
		    
    </LinearLayout>
    
    <LinearLayout
    	android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_weight="1"
    	android:layout_marginLeft="30dp"
    	android:layout_marginRight="30dp"
    	android:orientation="horizontal" >
    
		    <TextView
		        android:id="@+id/show_day_threshold"
		        android:layout_width="0dp"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
		        android:text="白天门限值(单位)"
		        android:textColor="@color/workspace_icon_text_color"
		        android:textSize="14.0sp" />
		
		    <EditText
		        android:id="@+id/day_threshold"
		        android:layout_width="0dp"
            	android:layout_height="wrap_content"
            	android:layout_weight="1"
		        android:background="@drawable/edittext_shape"
		        android:ems="10"
		        android:inputType="numberDecimal"
		        android:digits="1234567890" >
		    </EditText>

		    <TextView
		        android:id="@+id/day_threshold_record"
		        android:layout_width="0dp"
            	android:layout_height="wrap_content"
            	android:layout_weight="1.5"
		        android:textColor="@color/workspace_icon_text_color"
		        android:textSize="14.0sp" />
		    
    </LinearLayout>


    
</LinearLayout>
