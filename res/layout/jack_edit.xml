<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/workspace_background_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
	<include android:id="@id/title_bar" layout="@layout/title_bar" />

	<ImageView
	    android:id="@+id/jack_icon"
	    android:layout_width="80dp"
	    android:layout_height="80dp"
	    android:layout_alignParentLeft="true"
	    android:layout_below="@id/title_bar"
	    android:layout_marginLeft="86dp"
	    android:layout_marginTop="14dp"
	    android:background="@drawable/circle_outline"
	    android:padding="8.0dip"
	    android:src="@drawable/default_jack" />

	<EditText
	    android:id="@+id/socket_name"
	    android:layout_width="200dp"
	    android:layout_height="35dp"
	    android:layout_alignTop="@+id/jack_icon"
	    android:layout_marginLeft="76dp"
	    android:layout_marginTop="27dp"
	    android:layout_toRightOf="@+id/jack_icon"
	    android:paddingLeft="8px"
	    android:background="@drawable/edittext_shape"
	    android:ems="10"
	    android:singleLine="true" 
        android:inputType="text"
        android:hint=" 重命名前请在此输入名称"
        android:textSize="10sp"
        android:textColorHint="@color/hint_text" />

	 <TextView
	     android:id="@+id/txt_rename"
	     android:layout_width="80dp"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/jack_icon"
	     android:layout_below="@+id/jack_icon"
	     android:layout_marginTop="15dp"
	     android:gravity="center"
	     android:textSize="20sp"
	     android:text="name" />

	 <Button
	     android:id="@+id/timer_btn"
	     style="?android:attr/buttonStyleSmall"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:layout_alignLeft="@+id/socket_name"
	     android:layout_below="@+id/changname_btn"
	     android:background="@drawable/right_round_btn_bg"
	     android:text="@string/timer"
	     android:textColor="@color/title_bar_background"
	     android:textSize="20.0sp" />

	 <Button
	     android:id="@+id/changname_btn"
	     style="?android:attr/buttonStyleSmall"
	     android:layout_width="80dp"
	     android:layout_height="30dp"
	     android:layout_below="@+id/txt_rename"
	     android:layout_marginTop="16dp"
	     android:layout_toLeftOf="@+id/socket_name"
	     android:background="@drawable/button_bg"
	     android:text="重命名"
	     android:textColor="@color/title_bar_background"
	     android:textSize="15.0sp" />
	
</RelativeLayout>